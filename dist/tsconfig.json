{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "checkJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "declaration": true,
        "typeRoots": ["lib/types", "node_modules/@types/"]
    },
    "lib": [
        "es5",
        "es6"
    ],
    "include": [
        "lib/**/*.ts",
        "**/*.json"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ]
}
